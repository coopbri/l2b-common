{
    "compilerOptions": {
        "baseUrl": "src",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "strict": true,
        "target": "ESNext"
    },
    "include": [
        // NB: nested wildcard allows matches for e.g. `file.interface.ts`
        "src/**/*.*.ts",
    ],
}